extends ../../layouts/default.pug

block main
  h1(class="mb-4") Danh mục sản phẩm

  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
        .col-4.text-right
          a(
            href=`/${prefixAdmin}/products-category/create`
            class="btn btn-outline-success"
          ) + Thêm mới
      table(class="table table-hover table-sm")
        thead 
          tr
            th STT 
            th Hình ảnh 
            th Tiêu đề 
            th Vị trí
            th Trạng thái
            th Hành động
        tbody
          each item, index in products 
            tr 
              td #{index + 1}
              td 
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title} 
              td #{item.position}
              td 
                if (item.status === "active")
                  a(
                    href="javascript:;"
                    class="badge badge-success"
                    data-status="inactive"
                    data-id=item.id
                    button-change-status-product-category
                  ) Hoạt động
                else
                  a(
                    href="javascript:;"
                    class="badge badge-danger"
                    data-status="active"
                    data-id=item.id
                    button-change-status-product-category
                  ) Dừng hoạt động
              td
                a(
                  href="javascipt:;"
                  class="btn btn-warning mr-1 btn-sm"
                  change-status-prodcut-category
                ) Sửa
                button(
                  class="btn btn-danger mr-1 btn-sm"
                  data-id=item.id
                  delete-button-product-category
                  ) Xóa
                a(
                  href=`admin/products-category/${item.id}`
                  class="btn btn-primary mr-1 btn-sm"
                  delete-product-category
                ) Chi tiết
  form(
    form-change-status-product-category
    action=""
    data-path=`/${prefixAdmin}/products-category`
    method="POST"
    ) 
  form(
    form-delete-product-category
    action=""
    data-path=`/${prefixAdmin}/products-category/delete`
    method="POST"
  )

