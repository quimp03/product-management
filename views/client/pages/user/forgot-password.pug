extends ../../layouts/default
include ../../mixins/alert.pug
block main
  +alert-error()
  .container.my-5
    .row.justify-content-center
      .col-4
        h1(class="text-center-noneBoot text-center") Lấy lại mật khẩu
        form(
          action="/user/password/forgot"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn add-product btn-block"
            ) Gửi mail xác nhận