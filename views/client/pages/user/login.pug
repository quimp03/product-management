extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
  +alert-error(5000)
  .container.my-5
    .row.justify-content-center
      .col-4
        h1(class="text-center-noneBoot text-center") Đăng nhập
        form(
          action="/user/login"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn add-product btn-block"
            ) Đăng nhập
        div(class="text-center")
            a(href="/") Trở về
            a(href="/user/register" class="d-block") Đăng kí 
            a(href="/user/forgot")  Quên mật khẩu