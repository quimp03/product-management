extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
  .container.my-3
    .row
      .col-12.text-center
        h1(class="text-center") TẤT CẢ SẢN PHẨM
    .row
      each item in products
        .col-3.mb-3
          .product-item
            .inner-image
              a(href=`/products/detail/${item.slug}`) 
                img(src=item.thumbnail, alt=item.title)
            .inner-content
              h3.inner-title 
                a(href=`products/detail/${item.slug}`) #{item.title}
              .inner-price
                .inner-price-new #{currency(item.priceNew, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
                .inner-price-old #{currency(item.price, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
              .inner-discount #{item.discountPercentage}%