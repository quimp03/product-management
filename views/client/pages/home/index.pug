extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
block main
  +alert-success(5000)
  +alert-error(5000)
  div(class="slide-show")
    div(class="list-images")
      each item, index in generalSetting.slideshow
        img(src=item, alt=`slideshow_${index + 1}`)
    div(class="btns")
      div(class="btn-left btn-slide") <i class="fa-solid fa-chevron-left"></i>
      div(class="btn-right btn-slide") <i class="fa-solid fa-chevron-right"></i>
    div(class="index-images")
      each item, index in generalSetting.slideshow
        div(class=`index-item index-item-${index} ${index === 0 ? 'active' : ''}`)
  .container.my-3
    .row
      .col-12.text-center
        h1(class="text-center-noneBoot") SẢN PHẨM NỔI BẬT

    .row
      each item in productsFeatured
        .col-3.mb-3
          .product-item
            .inner-image
              a(href=`/products/detail/${item.slug}`)
                img(src=item.thumbnail, alt=item.title)
            .inner-content
              h3.inner-title 
                a(href=`products/detail/${item.slug}` class="under-general") #{item.title}
              .inner-price
                if(item.discountPercentage != 0)
                  .inner-price-new #{currency(item.newPrice, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
                  .inner-price-old #{currency(item.price, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
                else 
                  | #{currency(item.price, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
              if(item.discountPercentage != 0)
                .inner-discount #{item.discountPercentage}%
    .row
      .col-12.text-center
        h1(class="text-center-newProduct") SẢN PHẨM MỚI
    .row
      each item in productsNew
        .col-3.mb-3
          .product-item
            .inner-image
              a(href=`/products/detail/${item.slug}`)
                img(src=item.thumbnail, alt=item.title)
            .inner-content
              h3.inner-title 
                a(href=`products/detail/${item.slug}` class="under-general") #{item.title}
              .inner-price
                if(item.discountPercentage != 0)
                  .inner-price-new #{currency(item.newPrice, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
                  .inner-price-old #{currency(item.price, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
                else 
                  | #{currency(item.price, {symbol: "",separator: ',', decimal: ',', precision: 3}).format()}₫
              if(item.discountPercentage != 0)
                .inner-discount #{item.discountPercentage}%